            var locations = [
              ['UAE Branch', 25.1867276,55.261137, '<p class="mb-3"><b>Address </b> : Office 1902, The Exchange Tower, Business Bay, Dubai</p><pclass="mb-3"><b>Phone : </b>(+971) 56 535 0523</p><pclass="mb-3">'],
